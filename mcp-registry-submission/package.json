{
  "name": "@modelcontextprotocol/server-containarium",
  "version": "0.1.0",
  "description": "MCP server for Containarium - Manage LXC containers directly from Claude Desktop using natural language",
  "license": "Apache-2.0",
  "author": {
    "name": "FootprintAI",
    "url": "https://github.com/footprintai"
  },
  "homepage": "https://github.com/footprintai/containarium",
  "repository": {
    "type": "git",
    "url": "https://github.com/footprintai/containarium.git",
    "directory": "cmd/mcp-server"
  },
  "bugs": {
    "url": "https://github.com/footprintai/containarium/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "containers",
    "lxc",
    "incus",
    "devops",
    "infrastructure",
    "virtualization",
    "claude",
    "ai-tools"
  ],
  "mcpServer": {
    "transport": "stdio",
    "capabilities": {
      "tools": true
    },
    "tools": [
      {
        "name": "create_container",
        "description": "Create a new LXC container with specified resources"
      },
      {
        "name": "list_containers",
        "description": "List all containers with their status"
      },
      {
        "name": "get_container",
        "description": "Get detailed information about a specific container"
      },
      {
        "name": "delete_container",
        "description": "Delete a container permanently"
      },
      {
        "name": "start_container",
        "description": "Start a stopped container"
      },
      {
        "name": "stop_container",
        "description": "Stop a running container"
      },
      {
        "name": "get_metrics",
        "description": "Get runtime metrics for containers"
      },
      {
        "name": "get_system_info",
        "description": "Get information about the host system"
      }
    ]
  }
}
